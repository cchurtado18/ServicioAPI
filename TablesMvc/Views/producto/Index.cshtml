
@{
    ViewBag.Title = "Pagina de productos";
}

<style>
    #dt-records tbody th, #dt-records tbody td {
        padding: 0.25rem !important;
        line-height: 1.3em !important;
        vertical-align: middle !important;
    }

    #btnnuevo {
        margin-top: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="br-section-wrapper">

    <button id="btnnuevo" class="btn btn-primary" data-target="#modal-record"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo</button>

    <table id="dt-records" class="table-wrapper table display responsive nowrap table-hover" style="width:100%" data-page-length='10'>
        <thead class="thead-colored thead-primary">
            <tr>
                <th>Idproducto</th>
                <th>Nombre del producto</th>
                <th>Color</th>
                <th>Marca</th>
                <th>Edit/Delete</th>

                <th></th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

<div id="modal-record" class="modal" role="dialog">
    <div class="modal-dialog" style="width: 400px !important;">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Direcciones AW</h3>
            </div>
            <div class="modal-body">
                <form id="NewRecord" role="form">
                    <div>
                        <div class="form-group">
                            <label for="txtIdproducto" class="control-label">Idproducto</label>
                            <input type="text" id="txtIdproducto" class="form-control" placeholder="Nombre del producto" />
                        </div>
                        <div class="form-group">
                            <label for="txtNombre" class="control-label">Nombre</label>
                            <input type="text" id="txtNombre" class="form-control" placeholder="Nombre del producto" />
                        </div>
                        <div class="form-group">
                            <label for="Color" class="control-label">Color</label>
                            <input type="text" id="txtColor" class="form-control" placeholder="Color" />
                        </div>
                        <div class="form-group">
                            <label for="Marca" class="control-label">Marca</label>
                            <input type="text" id="txtMarca" class="form-control" placeholder="Marca" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnguardar" data-dismiss="modal" class="btn btn-primary">Guardar</button>
                        <button id="btncerrar" data-dismiss="modal" class="btn btn-danger">Cerrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/producto.js"></script>